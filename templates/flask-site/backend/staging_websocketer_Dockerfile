FROM $(websocketerBaseImage)
MAINTAINER $(maintainer)

ADD . /opt/docker/

RUN cd scripts && python mv_symlinks.py /opt/docker/websocketer

ENV DEPLOY staging
ENV DOCKER_HOST $(stagingWebsocketerHost)
ENV SITE_NAME $(siteName)
ENV TYPE prod
ENV WEB on
ENV WEBROUTER_URL $(stagingWebrouterUrl)

ENV WEBSOCKETER_URL $(stagingWebsocketerUrl)

EXPOSE $(stagingWebsocketerPort)

RUN pip install -r config/websocketer_requirements.txt

CMD gunicorn --config config/staging_guwsgi.ini websocketer:app
